<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="pane" prefHeight="703.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Events">
    <effect>
        <InnerShadow />
    </effect>
    <children>
        <TextField fx:id="enterID" layoutX="593.0" layoutY="490.0" opacity="0.7" prefHeight="28.0" prefWidth="156.0" text="Enter event ID">
            <font>
                <Font name="Times New Roman Italic" size="14.0" />
            </font>
        </TextField>
        <Button fx:id="register" layoutX="511.0" layoutY="543.0" mnemonicParsing="false" onAction="#handleRegister" opacity="0.7" prefHeight="28.0" prefWidth="88.0" text="Register">
            <font>
                <Font name="Times New Roman" size="14.0" />
            </font>
        </Button>
        <TableView fx:id="table" layoutX="128.0" layoutY="74.0" opacity="0.7" prefHeight="389.0" prefWidth="1080.0">
            <columns>
                <TableColumn fx:id="eventId" prefWidth="75.0" text="EventID" />
                <TableColumn fx:id="eventName" prefWidth="125.0" text="EventName" />
                <TableColumn fx:id="date" prefWidth="107.0" text="Date" />
                <TableColumn fx:id="time" text="Time" />
                <TableColumn fx:id="info" prefWidth="299.0" text="Information" />
                <TableColumn fx:id="organizer" prefWidth="143.0" text="Organizer" />
                <TableColumn fx:id="country" prefWidth="126.0" text="Country" />
                <TableColumn fx:id="city" prefWidth="124.0" text="City" />
            </columns>
        </TableView>
        <TextField fx:id="search" layoutX="128.0" layoutY="27.0" opacity="0.5" prefHeight="25.0" prefWidth="305.0" promptText="search events">
            <font>
                <Font name="Times New Roman" size="14.0" />
            </font>
        </TextField>
        <Label fx:id="displayRow" layoutX="153.0" layoutY="382.0" prefHeight="17.0" prefWidth="548.0" />
        <ComboBox fx:id="comboBox" layoutX="1058.0" layoutY="27.0" opacity="0.7" prefWidth="150.0" promptText="Order List By" />
        <Button fx:id="goBack" layoutX="1096.0" layoutY="634.0" mnemonicParsing="false" onAction="#handleGoBack" text="Go Back">
            <font>
                <Font name="Times New Roman" size="14.0" />
            </font>
        </Button>
    </children>
    <stylesheets>
        <URL value="@design.css" />
    </stylesheets>
</AnchorPane>
